<div class="container">
  <%= form_with(model: @post, local: true) do |f| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-3">
        <%= render 'shared/errors', obj: @post %>
        <div class="card text-center">
          <div class="card-header bg-grey text-center font-weight-bold my-font-size">
            <p>Send with the following contents</p>
          </div>
          <div class="card-body" style="height: 25rem;">
            <%= f.hidden_field :content %>
            <p class="card-text text-left"><%= @post.content %></p>
          </div>
          <div class="card-footer">
            <p>
              <%= f.submit "Register", class: "btn btn-outline-primary px-4" %>
              <%= f.submit "Back", name:'back', class: "btn btn-outline-primary px-4" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
