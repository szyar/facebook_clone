<% if @post.errors.any? %>
  <h2>The following errors prevented the post from being saved.</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @post, local: true) do |f| %>
  <p class="post_content">
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit "Post" %>
  </p>
<% end %>
